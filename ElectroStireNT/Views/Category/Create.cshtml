@model ElectroStireNT.Models.CategoryViewModel

@{
    ViewBag.Title = "Create";
}
<h4>Добавление жанра</h4>
@using (Html.BeginForm("Create","Category"))
{
    @Html.AntiForgeryToken()
<div class="form-group">
    <label>Название</label>
    @Html.EditorFor(m => m.CategoryName, null, new { htmlAttributes = new { @class = "form-control col-sm-4", placeholder = "Например: Классика" } })
    @Html.ValidationMessageFor(m => m.CategoryName)
</div>
    <input type="submit" value="Подтвердить" class="btn btn-primary"/>
}


<div>
    @Html.ActionLink("Вернутся к списку", "GetAllCategories", "Category")
</div>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="navbar navbar-inverse" role="navigation">
        <a class="navbar-brand" href="#">Moo-V - магазин фильмов</a>
        <div class="navbar-brand pull-right">
            <div>  @Html.ActionLink("Регистрация", "Register", "Account") </div>
            @Html.ActionLink("Войти", "Login", "Account")
        </div>
        <a class="btn btn-outline-light mx-1" href="@Url.Action("Index","Cart",  new { returnUrl = Request.Url.PathAndQuery })">
            <i class="fas fa-shopping-cart mr-1"></i>Корзина
        </a>
    </div>
    <div class="row panel">
        <div id="categories" class="col-xs-3">
            @Html.Action("Menu", "Nav")
        </div>
        <div class="col-xs-8">
            @RenderBody()
        </div>
    </div>
</body>
</html>
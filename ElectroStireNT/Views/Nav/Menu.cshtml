@model ElectroStireNT.Models.MenuViewModel

<style>

    .default {
        position: fixed;
        top: 50%;
        left: 5%;
    }

    .hidden {
        display: none;
    }
</style>
<div class="btn-group-vertical btn-group-lg">
    @Html.ActionLink("Главная", "Index", "Home", null, new { @class = "btn btn-primary" })
    
            @foreach (var link in Model.Categories)
            {
@Html.RouteLink(link.CategoryName, new
{
             controller = "Home",
             action = "Index",
             category = link.CategoryName,
}, new
{
    @class = "btn btn-block btn-default btn-lg"
            + (link == ViewBag.SelectedCategory ? " btn-primary" : "")
})            }
        </div>


<h4 class=" btn btn-success default hidden" id="success">Добавлено в корзину</h4>

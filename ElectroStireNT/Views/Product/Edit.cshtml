@model ElectroStireNT.Models.CreateProductViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
  
    @using (Ajax.BeginForm("Edit", "Product", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "updateAdminPanel", OnSuccess = "closeDialog"}))
    {

        
        @Html.ValidationSummary(true)
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Id)
        <div class="form-group">
            <label for="Name">Название</label>
            @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m=>m.Name)
        </div>
        <div class="form-group">
            <label for="Decription">Описание</label>
            @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = "5" })
            @Html.ValidationMessageFor(m => m.Description)
        </div>
        <div class="form-group">
            <label for="Price">Цена</label>
            @Html.EditorFor(m => m.Price, new { htmlAttributes = new { @class = "form-control", placeholder = "Цена в бел. руб, например 10" } })
            @Html.ValidationMessageFor(m => m.Price)
            
        </div>
      
        <div class="form-group">
            <label for="Category">Жанр</label>
            @Html.DropDownListFor(m => m.CategoryId, Model.Categories as SelectList, new { @class = "form-control" })
            @Html.ValidationMessageFor(m=>m.CategoryId)
       
        </div>
        <input type="submit" class="btn btn-secondary" value ="Подтвердить"/>
    }
</div>
<div>@Html.ActionLink("Вернутся к списку", "Main", "Product") </div>

